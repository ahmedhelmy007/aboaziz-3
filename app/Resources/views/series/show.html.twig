{% extends 'base.html.twig' %}

{% block body %}
    <h1>Series</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ series.id }}</td>
            </tr>
            <tr>
                <th>Categoryid</th>
                <td>{{ series.categoryId }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ series.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ series.description }}</td>
            </tr>
            <tr>
                <th>Imagepath</th>
                <td>{{ series.imagePath }}</td>
            </tr>
            <tr>
                <th>Imagealt</th>
                <td>{{ series.imageAlt }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ series.status }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('series_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('series_edit', { 'id': series.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
