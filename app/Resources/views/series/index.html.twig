{% extends 'base.html.twig' %}

{% block body %}
    <h1>Series list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Categoryid</th>
                <th>Title</th>
                <th>Description</th>
                <th>Imagepath</th>
                <th>Imagealt</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for series in series %}
            <tr>
                <td><a href="{{ path('series_show', { 'id': series.id }) }}">{{ series.id }}</a></td>
                <td>{{ series.categoryId }}</td>
                <td>{{ series.title }}</td>
                <td>{{ series.description }}</td>
                <td>{{ series.imagePath }}</td>
                <td>{{ series.imageAlt }}</td>
                <td>{{ series.status }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('series_show', { 'id': series.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('series_edit', { 'id': series.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('series_new') }}">Create a new series</a>
        </li>
    </ul>
{% endblock %}
